<h1>Details </h1>

<ul>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.phone_number %></li>
<li><%= @restaurant.category %></li>
</ul>


<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-warning mb-3"%>
<br>
<br>
<h2>All reviews</h2>

<ul>
<% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"><%= review.content %>
    <%= review.rating %>
  </li>
<% end %>
</ul>

<%= link_to "Add ratings", new_restaurant_review_path(@restaurant), class: "btn btn-primary m-1"%>
<br>
<br>
